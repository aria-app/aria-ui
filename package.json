{
  "version": "0.0.0-development",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "analyze": "size-limit --why",
    "build-storybook": "build-storybook",
    "build": "tsdx build",
    "ci": "yarn lint && yarn build && yarn test && yarn build-storybook",
    "clean": "rimraf build-storybook.log coverage dist storybook-static yarn-error.log",
    "lint": "tsdx lint src stories test --fix",
    "plop": "plop",
    "prepare": "tsdx build",
    "semantic-release": "semantic-release",
    "size": "size-limit",
    "start": "yarn clean && start-storybook -p 6006",
    "storybook": "start-storybook -p 6006",
    "test": "tsdx test --passWithNoTests",
    "test:watch": "tsdx test --coverage --watch"
  },
  "dependencies": {
    "capsize": "^2.0.0",
    "csstype": "3.0.8",
    "focus-trap-react": "^8.5.1",
    "framer-motion": "^4.1.17",
    "lodash-es": "^4.17.21",
    "mdi-react": "^7.5.0",
    "polished": "^4.1.3",
    "react-polymorphic-types": "^1.1.0",
    "react-responsive": "^8.2.0"
  },
  "peerDependencies": {
    "@emotion/react": ">=11",
    "@emotion/styled": ">=11",
    "lodash": "^4.17.12",
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-proposal-private-property-in-object",
        {
          "loose": true
        }
      ]
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>src/testSetup.ts"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "name": "aria-ui",
  "author": "Nick Johnson",
  "module": "dist/aria-ui.esm.js",
  "size-limit": [
    {
      "path": "dist/aria-ui.cjs.production.min.js",
      "limit": "150 KB"
    },
    {
      "path": "dist/aria-ui.esm.js",
      "limit": "150 KB"
    }
  ],
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@emotion/react": "^11.4.0",
    "@emotion/styled": "^11.3.0",
    "@size-limit/preset-small-lib": "^4.12.0",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addons": "^6.2.9",
    "@storybook/react": "^6.2.9",
    "@testing-library/jest-dom": "5.14.1",
    "@testing-library/react": "11.2.7",
    "@types/babel__core": "^7.1.14",
    "@types/jest": "26.0.23",
    "@types/lodash": "4.14.170",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-is": "^17.0.0",
    "@types/react-responsive": "^8.0.2",
    "@types/semantic-release": "^17.2.0",
    "@types/storybook__addon-info": "^5.2.3",
    "@types/testing-library__jest-dom": "5.14.0",
    "babel-loader": "^8.2.2",
    "chromatic": "^5.9.1",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-testing-library": "^4.6.0",
    "husky": "^6.0.0",
    "lodash": "^4.17.12",
    "plop": "^2.7.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-is": "^17.0.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.3",
    "size-limit": "^4.12.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.0",
    "typescript": "^4.3.2"
  },
  "release": {
    "branches": [
      "main"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/aria-app/aria-ui.git"
  },
  "resolutions": {
    "**/@typescript-eslint/eslint-plugin": "^4.11.1",
    "**/@typescript-eslint/parser": "^4.11.1",
    "**/jest": "^26.6.3",
    "**/ts-jest": "^26.4.4",
    "**/typescript": "^4.1.3"
  }
}
